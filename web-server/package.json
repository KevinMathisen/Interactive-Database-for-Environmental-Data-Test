{
  "name": "web-server",
  "version": "0.0.1",
  "description": "Web server running on node.js using express",
  "main": "src/app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest --detectOpenHandles",
    "lint": "npx standard --fix",
    "start": "node src/app.js",
    "prettify": "prettier --write '**/*.js'"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "27.0.0",
    "standard": "^16.0.3",
    "prettier": "^2.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "standard": {
    "env": [
      "mocha",
      "commonjs",
      "node",
      "jest"
    ]
  }, 
  "keywords": ["node", "express", "javascript"],
  "author": "",
  "license": "MIT"
}
